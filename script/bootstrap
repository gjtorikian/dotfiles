#!/usr/bin/env bash
#
# bootstrap installs things.

cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)

set -e

echo ''

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user () {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail () {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

setup_gitconfig () {
  if ! [ -f git/gitconfig.local.symlink ]
  then
    info 'setup gitconfig'

    git_credential='cache'
    if [ "$(uname -s)" == "Darwin" ]
    then
      git_credential='osxkeychain'
    fi

    git_authorname="Garen J. Torikian"
    git_authoremail="gjtorikian@gmail.com"

    sed -e "s/AUTHORNAME/$git_authorname/g" -e "s/AUTHOREMAIL/$git_authoremail/g" -e "s/GIT_CREDENTIAL_HELPER/$git_credential/g" git/gitconfig.local.symlink.example > git/gitconfig.local.symlink

    success 'gitconfig'
  fi
}


link_file () {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      local currentSrc="$(readlink $dst)"

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac


    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      success "skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    ln -s "$1" "$2"
    success "linked $1 to $2"
  fi
}

# Directories that need to be nested (symlinked into subdirectories of $HOME)
NESTED_DIRS=(
  ".ssh"
  ".claude"
  ".config/ghostty"
)

# Check if a source path should be nested, and if so, link it to the appropriate directory
# Returns 0 (true) if handled as nested, 1 (false) if not
link_nested () {
  local src=$1
  local filename=$2

  for nested_dir in "${NESTED_DIRS[@]}"; do
    if [[ $src == *"$nested_dir"* ]]; then
      filename="${filename:1}"  # strip leading dot
      mkdir -p "$HOME/$nested_dir"
      link_file "$src" "$HOME/$nested_dir/$filename"
      return 0
    fi
  done

  return 1
}

install_dotfiles () {
  info 'installing dotfiles'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 3 -name '*.symlink' -not -path '*.git*')
  do
    filename=".$(basename "${src%.*}")"
    dst="$HOME/$filename"

    # Try to link as nested; if not nested, link to $HOME directly
    if ! link_nested "$src" "$filename"; then
      link_file "$src" "$dst"
    fi
  done
}

setup_gitconfig

# Install and setup homebrew first.
# This ensures apps like ghostty and claude-code are installed
# before we create symlinks to their config directories.
if [ "$(uname -s)" == "Darwin" ]
then
  info "installing dependencies"
  if source bin/dot | while read -r data; do info "$data"; done
  then
    success "dependencies installed"
  else
    fail "error installing dependencies"
  fi
fi

install_dotfiles

background="$HOME/.dotfiles/theme/background.jpg"
osascript -e "tell application \"Finder\" to set desktop picture to POSIX file \"$background\""

echo ''
echo '  All installed!'
